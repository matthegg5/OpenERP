@{
    ViewBag.Title = "OpenERP";
}
<!DOCTYPE html>
<html>
<head>
    <link href="~/css/index.css" rel="stylesheet" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
</head>    
<body>
    <section class="showcase">
    <header>
      <h2 class="logo">Welcome to OpenERP</h2>
      <div class="toggle"></div>
    </header>
    <video src="~/media/index-background.mp4" muted loop autoplay></video>
    <div class="overlay"></div>
    <div class="text">
      <h2>Create</h2> 
      <h3>your own flow</h3>
      <p>OpenERP is completely open-source, and free! Your business can develop its own system and business logic rules as you see fit.</p>
      <a asp-controller="Account" asp-action="Login">Login</a>
    </div>
  </section> 
</body>
</html>